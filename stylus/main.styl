body
  font-family 'LiHei Pro', "微軟正黑體", "Microsoft JhengHei"	

html, body, #app, .view, main, section
  width 100%
  height 100%

::-webkit-scrollbar
  width 13px
  height @width
::-webkit-scrollbar-thumb
  background #666
  &:hover
    background lighten(#666, 10%)
::-webkit-scrollbar-corner
::-webkit-scrollbar-track
  background #ddd


.box
  width 40px
  font-size 20px
  height @width
  border 1px solid black
  border-radius 5px
  text-align center
  line-height @width
  margin 4px 0
  &.lg
    width 100px
    height @width
    line-height @width
    font-size 36px

section
  padding 6px
  background-color white
  border 1px solid #d3d3d3